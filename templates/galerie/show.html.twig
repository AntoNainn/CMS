{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block main %}
    <h1>Galerie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ galerie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ galerie.nom }}</td>
            </tr>
            <tr>
                <th>image</th>
                {% for image in galerie.images %}
                    <td><img src="data:image/jpeg;base64,{{ image.path }}" alt="Image" style="max-width: 300px;"></td>
                {% endfor %}
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ galerie.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_galerie_index') }}">back to list</a>

    <a href="{{ path('app_galerie_edit', {'id': galerie.id}) }}">edit</a>

    {{ include('galerie/_delete_form.html.twig') }}
{% endblock %}
